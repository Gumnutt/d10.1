<?php

/**
 * Implements hook_install().
 */
function alex_csv_migrate_install() {
  // Get the path to the module's script directory.
  $module_path = \Drupal::service('module_handler')->getModule('alex_csv_migrate')->getPath();
  $script_path = $module_path . '/scripts/build_fields.sh';

  // Execute the bash script using shell_exec().
  shell_exec($script_path);
}
